<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AppUpdateLogMapper">
	
	<!--表名 -->
	<sql id="tableName">
		dl_app_update_log
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		id,	
		app_code_name,	
		channel,
		version,	
		download_url,	
		update_log,	
		update_time,	
		update_install
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
        #{id},	
        #{app_code_name},	
        #{channel}
        #{version},	
        #{download_url},	
        #{update_log},	
        #{update_time},	
        #{update_install}	
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
		        app_code_name,	
		        version,
		        channel,	
		        download_url,	
		        update_log,	
		        update_time,	
		        update_install	
		) values (
		        #{app_code_name},	
		        #{version},
		        #{channel},
		        #{download_url},	
		        #{update_log},	
		        #{update_time},	
		        #{update_install}
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			id = #{id}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
		app_code_name = #{app_code_name},	
        channel = #{channel},
        version = #{version},	
        download_url = #{download_url},	
        update_log = #{update_log},	
        update_time = #{update_time},	
        update_install = #{update_install}
		where 
		id = #{id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where id = #{id}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				version  
				LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
				channel
				LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
		</if>
		<if test="pd.channel != null and pd.channel != ''"> 
			and channel = #{pd.channel}
		</if>
		<if test="pd.app_code_name != null and pd.app_code_name != ''"> 
			and app_code_name = #{pd.app_code_name}
		</if>
		<if test="pd.id != null and pd.id != ''"> 
			and id = #{id}
		</if>
		order by update_time desc,REPLACE(version,'.','') desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>