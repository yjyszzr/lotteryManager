<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ChannelDistributorMapper">
	
	<!--表名 -->
	<sql id="tableName">
		dl_channel_distributor
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		channel_distributor_id,	
		channel_id,	
		user_id,	
		user_name,	
		channel_distributor_num,	
		mobile,	
		distributor_commission_rate,	
		channel_name,	
		add_time,	
		remark,	
		deleted
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
        #{channel_distributor_id},	
        #{channel_id},	
        #{user_id},	
        #{user_name},	
        #{channel_distributor_num},	
        #{mobile},	
        #{distributor_commission_rate},	
        #{channel_name},	
        #{add_time},	
        #{remark},	
        #{deleted}	
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
		        channel_distributor_id,	
		        channel_id,	
		        user_id,	
		        user_name,	
		        channel_distributor_num,	
		        mobile,	
		        distributor_commission_rate,	
		        channel_name,	
		        add_time,	
		        remark,	
		        deleted	
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			channel_distributor_id = #{channel_distributor_id}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			user_name = #{user_name},
			channel_distributor_num = #{channel_distributor_num},
			mobile = #{mobile},
			distributor_commission_rate = #{distributor_commission_rate},
			channel_name = #{channel_name},
			remark = #{remark}
		where 
		channel_distributor_id = #{channel_distributor_id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			channel_distributor_id = #{channel_distributor_id}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			channel_distributor_id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
</mapper>