<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserRechargeMapper">
	
	<!--表名 -->
	<sql id="tableName">
		dl_user_recharge
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		id,	
		recharge_sn,	
		user_id,	
		amount,	
		account_id,	
		add_time,	
		status,	
		process_type,	
		payment_code,	
		payment_name,	
		pay_time,	
		payment_id,	
		donation_id
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
        #{id},	
        #{recharge_sn},	
        #{user_id},	
        #{amount},	
        #{account_id},	
        #{add_time},	
        #{status},	
        #{process_type},	
        #{payment_code},	
        #{payment_name},	
        #{pay_time},	
        #{payment_id},	
        #{donation_id}	
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
		        id,	
		        recharge_sn,	
		        user_id,	
		        amount,	
		        account_id,	
		        add_time,	
		        status,	
		        process_type,	
		        payment_code,	
		        payment_name,	
		        pay_time,	
		        payment_id,	
		        donation_id	
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			id = #{id}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
		amount = #{amount}
		where 
		id = #{id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			id = #{id}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		SELECT
			a.*,
			b.user_name,
			b.mobile,
			c.account_sn 
		FROM
			dl_user_recharge a
			LEFT JOIN dl_user b ON b.user_id = a.user_id
			LEFT JOIN dl_user_account c ON a.account_id = c.id 
		WHERE 1=1
		<if test="pd.account_sn != null and pd.account_sn != ''"> 
			and c.account_sn  
				LIKE CONCAT(CONCAT('%', #{pd.account_sn}),'%')
		</if>
		<if test="pd.mobile != null and pd.mobile != ''">
			and b.mobile  
			LIKE CONCAT(CONCAT('%', #{pd.mobile}),'%')
		</if>
		<if test="pd.user_name != null and pd.user_name != ''"> 
			and b.user_name  
				LIKE CONCAT(CONCAT('%', #{pd.user_name}),'%')
		</if>
		<if test="pd.status != null and pd.status != ''"> 
			and a.status = #{pd.status }
		</if>
		<if test="pd.lastStart != null and pd.lastStart != ''"> 
			and a.pay_time &gt; #{pd.lastStart }
		</if>
		<if test="pd.lastStart != null and pd.lastStart != ''"> 
			and a.pay_time &lt; #{pd.lastEnd }
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>