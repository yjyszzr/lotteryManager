<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserRechargeMapper">
	
	<!--表名 -->
	<sql id="tableName">
		dl_user_recharge
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		id,	
		recharge_sn,	
		user_id,	
		amount,	
		account_id,	
		add_time,	
		status,	
		process_type,	
		payment_code,	
		payment_name,	
		pay_time,	
		payment_id,	
		donation_id
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
        #{id},	
        #{recharge_sn},	
        #{user_id},	
        #{amount},	
        #{account_id},	
        #{add_time},	
        #{status},	
        #{process_type},	
        #{payment_code},	
        #{payment_name},	
        #{pay_time},	
        #{payment_id},	
        #{donation_id}	
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
		        id,	
		        recharge_sn,	
		        user_id,	
		        amount,	
		        account_id,	
		        add_time,	
		        status,	
		        process_type,	
		        payment_code,	
		        payment_name,	
		        pay_time,	
		        payment_id,	
		        donation_id	
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			id = #{id}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
		amount = #{amount}
		where 
		id = #{id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			id = #{id}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
			a.*,
			b.user_name as user_name,
			b.mobile as mobile 
		from
			dl_user_recharge a,
			dl_user b 
		where
			b.user_id = a.user_id
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>