<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="QuestionsAndAnswersMapper">
	
	<!--表名 -->
	<sql id="tableName">
		dl_questions_and_answers
	</sql>
 
	<!-- 字段值 -->
	<sql id="FieldValue">
        #{id},	
        #{match_id},	
        #{start_time},	
        #{end_time},	
        #{create_time},	
        #{scope_of_activity},	
        #{limit_lottery_amount},	
        #{bonus_pool},	
        #{question_and_answer},	
        #{num_of_people}	,
        #{status},
        #{period},
        #{guessing_title}	
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
		        id,	
		        match_id,	
		        start_time,	
		        end_time,	
		        create_time,
		        scope_of_activity,	
		        limit_lottery_amount,	
		        bonus_pool,	
		        question_and_answer,	
		        num_of_people,
		        status,
		        period,
		        guessing_title	
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			id = #{id}
	</delete>
	
	<!-- 修改 -->
	<update id="updateStatus" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			status  = #{status}
		where 
			id = #{id}
	</update>
	<update id="updateQuestionsAndAnswers" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			question_and_answer = #{question_and_answer},
			status  = #{status},
			answer_show_time  = #{answer_show_time} 
		where 
			id = #{id}
	</update>
	<update id="updateAward" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			status  = #{status},
			prizewinning_num = #{prizewinning_num},
			award_time  = #{award_time} 
		where 
			id = #{id}
	</update>
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			start_time = #{start_time},
			end_time = #{end_time},
			limit_lottery_amount = #{limit_lottery_amount},
			bonus_pool = #{bonus_pool},
			question_and_answer = #{question_and_answer},
			num_of_people = #{num_of_people}
		where 
			id = #{id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select  * from 
		<include refid="tableName"></include>
		where 
			id = #{id}
	</select>
	
	<select id="findByMatchId" parameterType="Integer" resultType="pd">
		select * from 
		<include refid="tableName"></include>
		where 
			match_id = #{matchId}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select * from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.guessing_title!= null and pd.guessing_title != ''"><!-- 关键词检索 -->
			and
			 guessing_title LIKE CONCAT(CONCAT('%', #{pd.guessing_title}),'%')
		</if>
		order By create_time desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select * from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
</mapper>