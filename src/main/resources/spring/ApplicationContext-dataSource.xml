	</bean>  
	<aop:config>
		<aop:pointcut id="pc3" expression="execution(* com.fh.service..*(..))" />
		<aop:advisor pointcut-ref="pc3" advice-ref="txAdvice3" />
	</aop:config>
	<tx:advice id="txAdvice3" transaction-manager="transactionManager3">
