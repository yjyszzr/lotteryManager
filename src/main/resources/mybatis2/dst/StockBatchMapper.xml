<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="StockBatchMapper">
	
	<!--表名 -->
	<sql id="tableName">
		pgt_stock_batch
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		store_id,	
		sku_id,	
		sku_name,	
		sku_encode,	
		batch_code,	
		quantity,	
		unit_name,	
		stock_batch_id
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
        #{store_id},	
        #{sku_id},	
        #{sku_name},	
        #{sku_encode},	
        #{batch_code},	
        #{quantity},	
        #{unit_name}	
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
		        store_id,	
		        sku_id,	
		        sku_name,	
		        sku_encode,	
		        batch_code,	
		        quantity,	
		        unit_name	
		) values (
	  #{store_id},	
        #{sku_id},	
        #{sku_name},	
        #{sku_encode},	
        #{batch_code},	
        #{quantity},	
        #{unit_name}	
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			stock_batch_id = #{stock_batch_id}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			stock_batch_id = #{stock_batch_id},
			store_id = #{store_id},
			sku_id = #{sku_id},
			sku_name = #{sku_name},
			sku_encode = #{sku_encode},
			batch_code = #{batch_code},
			quantity = #{quantity},
			unit_name = #{unit_name},
		stock_batch_id = stock_batch_id
		where 
		stock_batch_id = #{stock_batch_id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			stock_batch_id = #{stock_batch_id}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<!-- 数量小于等于0不显示lw -->
		 and quantity>0
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
		<if test="pd.store_id!= null and pd.store_id!= ''">
		   and store_id=#{pd.store_id}
		</if>
		
		<if test="pd.sku_id!= null and pd.sku_id!= ''">
		   and sku_id=#{pd.sku_id}
		</if>
		
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<select id="listAllByParam" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where quantity>0 
		<if test="store_id!= null and store_id!= ''">
		   and store_id=#{store_id}
		</if>
		
		<if test="sku_id!= null and sku_id!= ''">
		   and sku_id=#{sku_id}
		</if>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			stock_batch_id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	
	<select id="findByBatchAndSkuAndStoreId" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			store_id=#{store_id} AND sku_id=#{sku_id} AND batch_code=#{batch_code}
	</select>
	
	
		<update id="editQuantity" parameterType="pd">
		UPDATE pgt_stock_batch SET quantity=quantity+${quantity} where 
		store_id=#{store_id} AND sku_id=#{sku_id} AND batch_code=#{batch_code}
		and  quantity+${quantity} &gt;= 0
		
	</update>
	
	<select id="findBySkuAndStoreId" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			store_id=#{store_id} AND sku_id=#{sku_id} AND batch_code like CONCAT(#{sku_barcode},'%')
	</select>
	
	<!-- fh313596790qq(青苔) -->
</mapper>