<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="OutboundStockBatchMapper">
	
	<!--表名 -->
	<sql id="tableName">
		pgt_outbound_stock_batch
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		outbound_code,	
		outbound_detail_id,	
		sku_id,	
		sku_name,	
		sku_encode,	
		batch_code,	
		quantity,	
		spec,	
		unit_name,	
		outbound_stock_batch_id
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
        #{outbound_code},	
        #{outbound_detail_id},	
        #{sku_id},	
        #{sku_name},	
        #{sku_encode},	
        #{batch_code},	
        #{quantity},	
        #{spec},	
        #{unit_name}	
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
		        outbound_code,	
		        outbound_detail_id,	
		        sku_id,	
		        sku_name,	
		        sku_encode,	
		        batch_code,	
		        quantity,	
		        spec,	
		        unit_name	
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			outbound_stock_batch_id = #{outbound_stock_batch_id}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			sku_name = #{sku_name},
			sku_encode = #{sku_encode},
			batch_code = #{batch_code},
			quantity = #{quantity},
			spec = #{spec},
			unit_name = #{unit_name},
		outbound_stock_batch_id = outbound_stock_batch_id
		where 
		outbound_stock_batch_id = #{outbound_stock_batch_id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where outbound_stock_batch_id = #{outbound_stock_batch_id}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where outbound_code = #{outbound_code}
		    and outbound_detail_id = #{outbound_detail_id}
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			outbound_stock_batch_id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	
	<select id="findByOutBoundCode" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			outbound_code = #{outbound_code}
	</select>
	
	<!-- 列表(全部) -->
	<select id="listByOutboundCode" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
			where 
			outbound_code = #{outbound_code}
	</select>
	
	<select id="queryOutboundBatchByCode" parameterType="pd" resultType="pd">
	select
		isb.outbound_stock_batch_id,	
		isb.outbound_code bound_code,	
		isb.outbound_detail_id,	
		isb.sku_id,	
		isb.sku_name,	
		gs.sku_encode,	
		isb.batch_code,	
		isb.quantity,	
		g.spec,	
		g.unit_name
		from 
		<include refid="tableName"></include> isb
		left join szy_goods_sku_6 gs on isb.sku_id = gs.sku_id
		left join szy_goods_6 g on g.goods_id = gs.goods_id
			where 
			outbound_code = #{outbound_code}
	</select>
	<!-- fh313596790qq(青苔) -->
</mapper>