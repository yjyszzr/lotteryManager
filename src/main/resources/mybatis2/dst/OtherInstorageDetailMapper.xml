<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="OtherInstorageDetailMapper">
	
	<!--表名 -->
	<sql id="tableName">
		pgt_other_instorage_detail
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		other_instorage_detail_id,	
		other_instorage_code,	
		sku_id,	
		sku_encode,	
		sku_name,	
		spec,	
		unit,	
		quantity,	
		arrive_quantity,	
		createby,	
		create_time,	
		updateby,	
		update_time,
		isopen_batch
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
      
        #{other_instorage_code},	
        #{sku_id},	
        #{sku_encode},	
        #{sku_name},	
        #{spec},	
        #{unit},	
        #{quantity},	
        #{arrive_quantity},	
        #{createby},	
        #{create_time},	
        #{updateby},	
        #{update_time},
        #{isopen_batch}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
		      	
		        other_instorage_code,	
		        sku_id,	
		        sku_encode,	
		        sku_name,	
		        spec,	
		        unit,	
		        quantity,	
		        arrive_quantity,	
		        createby,	
		        create_time,	
		        updateby,	
		        update_time,
		        isopen_batch
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			other_instorage_detail_id = #{other_instorage_detail_id}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			other_instorage_detail_id = #{other_instorage_detail_id},
			other_instorage_code = #{other_instorage_code},
			sku_id = #{sku_id},
			sku_encode = #{sku_encode},
			sku_name = #{sku_name},
			spec = #{spec},
			unit = #{unit},
			quantity = #{quantity},
			arrive_quantity = #{arrive_quantity},
			update_time = #{update_time},
		other_instorage_detail_id = other_instorage_detail_id
		where 
		other_instorage_detail_id = #{other_instorage_detail_id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			other_instorage_detail_id = #{other_instorage_detail_id}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
		<if test="pd.other_instorage_code != null and pd.other_instorage_code !=''">
			and other_instorage_code = #{pd.other_instorage_code}
		</if>
		<if test="pd.other_instorage_detail_id != null and pd.other_instorage_detail_id !=''">
			and other_instorage_detail_id = #{pd.other_instorage_detail_id}
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
	
		<if test="other_instorage_code != null and other_instorage_code !=''">
			and other_instorage_code = #{other_instorage_code}
		</if>
		<if test="sku_id != null and sku_id !=''">
			and sku_id = #{sku_id}
		</if>
		<if test="other_instorage_detail_id != null and other_instorage_detail_id !=''">
			and other_instorage_detail_id = #{other_instorage_detail_id}
		</if>
	</select>
	<update id="updateQuantityForAdd" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
		<if test=" arrive_quantity!= null and arrive_quantity != ''">
		 arrive_quantity = arrive_quantity + #{arrive_quantity},
		</if>
		
			other_instorage_detail_id = #{other_instorage_detail_id}
		where 
		other_instorage_detail_id = #{other_instorage_detail_id}
	</update>
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			other_instorage_detail_id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<select id="listByCode" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			other_instorage_code = #{other_instorage_code}
	</select>
	<!-- fh313596790qq(青苔) -->
</mapper>