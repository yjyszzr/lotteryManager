<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DeliveryUserCompanyMapper">
	
	<!--表名 -->
	<sql id="tableName">
		pgt_delivery_user_company
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		delivery_org_id,	
		name,	
		contact,	
		tel,	
		address,	
		standard_amount,	
		standard_quantity,	
		out_amount,	
		type,	
		status,	
		createby,	
		create_time,	
		updateby,	
		update_time,	
		delivery_user_company_id
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
        #{delivery_org_id},	
        #{name},	
        #{contact},	
        #{tel},	
        #{address},	
        #{standard_amount},	
        #{standard_quantity},	
        #{out_amount},	
        #{type},	
        #{status},	
        #{createby},	
        #{create_time},	
        #{updateby},	
        #{update_time}	
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
		        delivery_org_id,	
		        name,	
		        contact,	
		        tel,	
		        address,	
		        standard_amount,	
		        standard_quantity,	
		        out_amount,	
		        type,	
		        status,	
		        createby,	
		        create_time,	
		        updateby,	
		        update_time	
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			delivery_user_company_id = #{delivery_user_company_id}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			delivery_org_id = #{delivery_org_id},
			name = #{name},
			contact = #{contact},
			tel = #{tel},
			address = #{address},
			standard_amount = #{standard_amount},
			standard_quantity = #{standard_quantity},
			out_amount = #{out_amount},
			type = #{type},
			status = #{status},
			updateby = #{updateby},
			update_time = #{update_time},
		delivery_user_company_id = delivery_user_company_id
		where 
		delivery_user_company_id = #{delivery_user_company_id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			delivery_user_company_id = #{delivery_user_company_id}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			delivery_user_company_id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 列表(通过配送组织获取) -->
	<select id="listByOrg" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where
		delivery_org_id = #{delivery_org_id}
	</select>
	<!-- fh313596790qq(青苔) -->
</mapper>